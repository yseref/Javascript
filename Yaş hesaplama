    console.log("Şu an "+ (dogdugunGun + 30 - gun) + " Gün " + (ay - dogduguAy) + " Ay " + (tarih-alinan) + " Yaşındasınız ")


}else if (dogdugunGun<gun && dogduguAy<ay){
console.log("Şu an "+ (dogdugunGun + 30 - gun) + " Gün " + (dogduguAy+12-ay) + " Ay " + (tarih-alinan) + " Yaşındasınız ")


}else{
console.log("Şu an "+ (gun-dogdugunGun) + " Gün " + (ay - dogduguAy) + " Ay " + (tarih-alinan) + " Yaşındasınız ")
}





}else{console.log("Yanlış değer girdiniz")}


}else if (dogduguAy == 2 && (alinan%4)!=0 ){
if(dogdugunGun>0 && dogdugunGun<=28 && alinan > 1900 && alinan<=tarih){

if(dogdugunGun > gun && dogduguAy > ay){
console.log("Şu an "+ (gun-dogdugunGun) + " Gün " + (ay - dogduguAy) + " Ay " + (tarih-alinan) + " Yaşındasınız ")


}else if (dogdugunGun>gun && dogduguAy < ay){
    console.log("Şu an "+ (dogdugunGun-gun) + " Gün " + (dogduguAy+12-ay) + " Ay " + (tarih-alinan) + " Yaşındasınız ")

}else if (dogdugunGun<gun && dogduguAy>ay){
    console.log("Şu an "+ (dogdugunGun + 30 - gun) + " Gün " + (ay - dogduguAy) + " Ay " + (tarih-alinan) + " Yaşındasınız ")


}else if (dogdugunGun<gun && dogduguAy<ay){
console.log("Şu an "+ (dogdugunGun + 30 - gun) + " Gün " + (dogduguAy+12-ay) + " Ay " + (tarih-alinan) + " Yaşındasınız ")


}else{
console.log("Şu an "+ (gun-dogdugunGun) + " Gün " + (ay - dogduguAy) + " Ay " + (tarih-alinan) + " Yaşındasınız ")
}
    


}else{console.log("Yanlış değer girdiniz")}

} else if ((dogduguAy%2==1)){
    if(dogdugunGun<=31 && dogdugunGun >0 && alinan > 1900 && alinan<=tarih){


if(dogdugunGun > gun && dogduguAy > ay){
console.log("Şu an "+ (gun-dogdugunGun) + " Gün " + (ay - dogduguAy) + " Ay " + (tarih-alinan) + " Yaşındasınız ")


}else if (dogdugunGun>gun && dogduguAy < ay){
    console.log("Şu an "+ (gun-dogdugunGun) + " Gün " + (dogduguAy+12-ay) + " Ay " + (tarih-alinan) + " Yaşındasınız ")

}else if (dogdugunGun<gun && dogduguAy>ay){
    console.log("Şu an "+ (dogdugunGun + 30 - gun) + " Gün " + (ay - dogduguAy) + " Ay " + (tarih-alinan) + " Yaşındasınız ")


}else if (dogdugunGun<gun && dogduguAy<ay){
console.log("Şu an "+ (dogdugunGun + 30 - gun) + " Gün " + (dogduguAy+12-ay) + " Ay " + (tarih-alinan) + " Yaşındasınız ")


}else{
console.log("Şu an "+ (gun-dogdugunGun) + " Gün " + (ay - dogduguAy) + " Ay " + (tarih-alinan) + " Yaşındasınız ")
}



    }else{console.log("Yanlış değer girdiniz")}



} else {
    if(dogdugunGun<=30 && dogdugunGun>0 && alinan > 1900 && alinan<=tarih){
if(dogdugunGun > gun && dogduguAy > ay){
console.log("Şu an "+ (gun-dogdugunGun) + " Gün " + (ay - dogduguAy) + " Ay " + (tarih-alinan) + " Yaşındasınız ")


}else if (dogdugunGun>gun && dogduguAy < ay){
    console.log("Şu an "+ (gun-dogdugunGun) + " Gün " + (dogduguAy+12-ay) + " Ay " + (tarih-alinan) + " Yaşındasınız ")

}else if (dogdugunGun<gun && dogduguAy>ay){
    console.log("Şu an "+ (dogdugunGun + 30 - gun) + " Gün " + (ay - dogduguAy) + " Ay " + (tarih-alinan) + " Yaşındasınız ")


}else if (dogdugunGun<gun && dogduguAy<ay){
console.log("Şu an "+ (dogdugunGun + 30 - gun) + " Gün " + (dogduguAy+12-ay) + " Ay " + (tarih-alinan) + " Yaşındasınız ")


}else{
console.log("Şu an "+ (gun-dogdugunGun) + " Gün " + (ay - dogduguAy) + " Ay " + (tarih-alinan) + " Yaşındasınız ")
}





    }



}
}else {console.log("Yanlış değer girdiniz")}
}else{console.log("Yanlış değer girdiniz")}

